# Tab completion is case insensitive
# https://askubuntu.com/a/87066
set completion-ignore-case on

# Configure so option-backspace doesn't eat whole paths
"\e\C-?": unix-filename-rubout

# https://github.com/mathiasbynens/dotfiles ----------------

# List all matches in case multiple possible completions are possible
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Readline 6+ enhancements (avoid warnings on older systems)
$if version >= 6
# Cycle through completions with Tab (closer to zsh menu select)
"\t": menu-complete

# Immediately add a trailing slash when autocompleting symlinks to directories
set mark-symlinked-directories on

# Do not autocomplete hidden files unless the pattern explicitly begins with a dot
set match-hidden-files off

# Show all autocomplete results at once
set page-completions off

# If there are more than 200 possible completions for a word, ask to show them all
set completion-query-items 200

# Show extra file information when completing, like `ls -F` does
set visible-stats on

# Treat hyphens and underscores as equivalent for completion
set completion-map-case on
$endif

# Readline 8+ enhancements (avoid warnings on older systems)
$if version >= 8
# Be more intelligent when autocompleting by also looking at the text after
# the cursor. For example, when the current line is "cd ~/src/mozil", and
# the cursor is on the "z", pressing Tab will not autocomplete it to "cd
# ~/src/mozillail", but to "cd ~/src/mozilla".
set skip-completed-text on

# Colored completion results
set colored-completion-prefix on
set colored-stats on
$endif

# Allow UTF-8 input and output, instead of showing stuff like $'\0123\0456'
set input-meta on
set output-meta on
set convert-meta off

# Disable the bell entirely
set bell-style none

# macOS-style word movement (Option+arrow keys)

"\e[1;3C": forward-word       # Option+Right
"\e[1;3D": backward-word      # Option+Left
"\e\e[C": forward-word       # Option+Right (alternative)
"\e\e[D": backward-word      # Option+Left (alternative)

# Home/End keys (Cmd+Left/Right on Mac)
"\e[1;9D": beginning-of-line  # Cmd+Left
"\e[1;9C": end-of-line        # Cmd+Right
"\e[H": beginning-of-line    # Home
"\e[F": end-of-line          # End

# Delete word backward (Option+Backspace)
"\e\x7f": backward-kill-word

# Delete word forward (Option+Delete)
"\e[3;3~": kill-word

# Up/Down arrow for history search (like Terminal.app)
"\e[A": history-search-backward
"\e[B": history-search-forward

# Enable incremental search with Ctrl+R (usually default)
"\C-r": reverse-search-history

# Quick directory navigation
"\C-l": clear-screen         # Ctrl+L to clear
